<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

<body class="body_formulario">
    <%- include('../partials/header') %>
    <main class="main_formulario">
        <form action="/users/create" method="POST" enctype="multipart/form-data">
            <p class="form-input">
                <label for="firstName">Nombre</label>
                <input id="firstName" type="text" name="firstName" value="<%= locals.oldData ? oldData.firstName : null %>"/>
                <% if (locals.errors && errors.firstName) {%>
                <span><%= errors.firstName.msg %></span>
                <% }%>
            </p>
            <p>
                <label for="lastName">Apellido</label>
                <input id="lastName" type="text" name="lastName" value="<%= locals.oldData ? oldData.lastName : null %>"/>
                <% if (locals.errors && errors.lastName) {%>
                    <span><%= errors.lastName.msg %></span>
                    <% }%>
            </p>
            <p>
                <label for="password">Contraseña</label>
                <input id="password" type="password" name="password" />
                <% if (locals.errors && errors.password) {%>
                    <span><%= errors.password.msg %></span>
                    <% }%>
            </p>
            <p>
                <label for="profileImage">Imagen de Perfil</label>
                <input id="profileImage" type="file" name="profileImage" />
                <% if (locals.errors && errors.profileImage) {%>
                    <span><%= errors.profileImage.msg %></span>
                    <% }%>
            </p>
            <p>
                <label for="email">Correo Electrónico</label>
                <input id="email" type="email" name="email" value="<%= locals.oldData ? oldData.email : null %>"/>
                <% if (locals.errors && errors.email) {%>
                    <span><%= errors.email.msg %></span>
                    <% }%>
            </p>
            <p>
                <input id="acceptedTerms" type="checkbox" name="acceptedTerms" />
                <label for="acceptedTerms">Acepto términos y condiciones</label>
                <% if (locals.errors && errors.acceptedTerms) {%>
                    <span><%= errors.acceptedTerms.msg %></span>
                    <% }%>
            </p>
            <button type="submit">Continuar</button>
        </form>
    </main>
    <%- include('../partials/footer') %>
    <!-- <script src="/js/formulario.js"></script> -->
</body>

</html>