<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

<body>
  <%- include('../partials/header') %>
  <main class="container container--primary">
    <section class="container container--secondary">
      <header class="header header--primary">
        <h2>Gesti√≥n de Usuarios</h2>
          <a href="/products/create" class="button button--primary">Crear un Usuario</a>
      </header>
      <div class="container container--tertiary">
        <table class="table table--primary">
          <thead class="table__header">
            <tr class="row">
              <th class="row__item row__item--primary">Nombre</th>
              <th class="row__item row__item--primary">Apellido</th>
              <th class="row__item row__item--primary">Correo</th>
              <th class="row__item row__item--primary">Opciones</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach( user => { %>
            <tr class="row container container--quinary">
              <td class="row__item--secondary">
                <%= user.first_name %>
              </td>
              <td class="row__item--secondary">
                <%= user.last_name %>
              </td>
              <td class="row__item--secondary">
                <%= user.email %>
              </td>
              <td class="row__item--secondary">
                <div class="container container--quaternary">
                  <a href="/users/<%= user.id %>" class="button button--primary">Ver</a>
                  <a href="/users/<%= user.id %>/edit" class="button button--primary">Editar</a>
                  <form action="/users/<%= user.id %>?_method=DELETE" method="POST">
                    <button type="submit" id="delete-user" class="button button--primary">Eliminar</button>
                  </form>
                </div>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </section>
  </main>


  <%- include('../partials/footer') %>
</body>

</html>